<p class="uk-align-right">
  <span uk-icon="icon: pencil"></span>
  <%= link_to 'Edit', edit_provider_path(@provider), class: 'uk-icon-link' %>
  <span uk-icon="icon: trash"></span>
  <%= link_to 'Delete', provider_path(@provider), method: :delete, class: 'uk-icon-link', data: { confirm: 'Are you sure?' } %>
</p>
<h3><%= @provider.name %></h3>
<p><%= @provider.address %></p>
<p>
  <span uk-icon="icon: plus-circle"></span>
  <%= link_to 'Add contact', new_provider_contact_path(@provider), class: 'uk-icon-link' %>
</p>
<table class="uk-table uk-table-striped">
  <thead>
    <tr>
      <th>Contact</th>
      <th>Mail</th>
      <th>Phone</th>
      <th>Action</th>
    </tr>
  </thead>
<% @provider.contacts.each do |contact| %>
  <tr>
    <td><%= contact.name %></td>
    <td><%= contact.mail %></td>
    <td><%= contact.phone %></td>
    <td>
      <%= link_to edit_provider_contact_path(provider_id: @provider.id, id: contact.id), class: 'uk-icon-link' do %>
        <span uk-icon="icon: pencil"></span>
      <% end %>
      <%= link_to provider_contact_path(provider_id: @provider.id, id: contact.id),
                  class: 'uk-icon-link',
                  method: :delete,
                  data: { confirm: 'Are you sure?' } do %>
        <span uk-icon="icon: trash"></span>
      <% end %>
    </td>
  </tr>
<% end %>
</table>
